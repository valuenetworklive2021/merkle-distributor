{
  "name": "@valueswap/merkle-distributor",
  "version": "1.0.0",
  "description": "ðŸ“¦ A smart contract that distributes a balance of tokens according to a merkle root",
  "author": {
    "name": "Value Network",
    "email": "support@valuenetwork.live",
    "url": "https://valuenetwork.live"
